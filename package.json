{
  "name": "nestbase-monorepo",
  "version": "1.0.0",
  "description": "NestBase Monorepo - 现代化全栈应用框架",
  "private": true,
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter backend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --filter backend build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter @nestbase/frontend build",
    "dev:frontend": "pnpm --filter @nestbase/frontend dev",
    "start": "pnpm --filter backend start",
    "start:prod": "pnpm --filter backend start:prod",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm -r test",
    "prisma:generate": "pnpm --filter backend prisma:generate",
    "prisma:migrate": "pnpm --filter backend prisma:migrate",
    "prisma:studio": "pnpm --filter backend prisma:studio",
    "prisma:seed": "pnpm --filter backend prisma:seed",
    "clean": "pnpm -r exec rm -rf node_modules dist",
    "clean:all": "pnpm clean && rm -rf node_modules",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "mermaid": "^11.12.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.5.26"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
